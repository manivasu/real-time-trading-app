  "compilerOptions": {
    "module": "commonjs", // or "esnext" if you want to use ES modules
    "target": "es6",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true, // This is important for compatibility
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}